---
import { Image } from "astro:assets";
import PaztGLogo from "../assets/images/paztg-logo.png";
---

<header class="fixed w-full transition-all" id="navbar">
	<div class="px-5">
	<nav class="hidden lg:navbar ">
		<!-- Desktop View -->
		<div class="flex-1  ">
			<img src={PaztGLogo.src} alt="Logo" class="h-12 w-12 invert" />
		</div>
			<ul class="menu menu-horizontal uppercase font-bold flex-none">
				<li>
					<a href="">About</a>
				</li>
				<li>
					<a href="" class="">Contact</a>
				</li>
			</ul>
	</nav>
		<!-- Mobile View -->
		<nav class="navbar lg:hidden">
			<div class="navbar-start">
				<img src={PaztGLogo.src} alt="Logo" class="h-12 w-12 invert" />
			</div>
			<div class="navbar-end">
				<div class="dropdown dropdown-end">
					<label tabindex="0" class="btn btn-circle btn-ghost">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="h-5 w-5"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
							><path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M4 6h16M4 12h16M4 18h7"></path></svg
						>
					</label>
					<ul
						tabindex="0"
						class="menu dropdown-content z-[1] mt-3 w-52 rounded-box bg-base-300 p-2 shadow"
					>
						<li>
							<a href="">About</a>
						</li>
						<li>
							<a href="">Contact</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</div>
</header>

<script>
	let navbar = document.getElementById("navbar")	

	function checkScroll() {
		let scrollY =  window.scrollY;
		if (scrollY > 0) {
			// Add a navbar sticky animation here
			navbar?.classList.add('bg-base-300')
		} else {
			navbar?.classList.remove('bg-base-300')
		}
	}

	// add the event listener
	window.addEventListener('scroll', checkScroll)
</script>
